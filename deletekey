#!/bin/bash

#
#	default args/vars
#
here="$(dirname ${BASH_SOURCE[0]})"
name="$(basename ${BASH_SOURCE[0]})"
. "${here}/.defaults"
#
#	mandatory args
#
[ $# -eq 1 ] || {
	echo "syntax $name key [ db ]"
	exit 1
}
#
#	optional args
#
[ $# -gt 1 ] && db="$2"

#
#	sed 
#	-i.save 	backup to $2.save
#	'/^'		find at the beginning
#		"$1"	key
#	'/d' 		delete line
#	"$2"		filename
#
sed -i.save '/^'"$1"'/d' "$2"

