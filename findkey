#!/bin/bash

################################################################################
#
#	default args/vars
#
################################################################################
here="$(dirname ${BASH_SOURCE[0]})"
name="$(basename ${BASH_SOURCE[0]})"
. "${here}/.defaults"
################################################################################
#
#	mandatory args
#
################################################################################
[ $# -eq 1 ] || {
	echo "syntax $name key [ db ]"
	exit 1
}
################################################################################
#
#	optional args
#
################################################################################
[ $# -gt 2 ] && db="$2"

key="$1"
grep "^$key" "$db" > /dev/null && exit 0 || exit 1


